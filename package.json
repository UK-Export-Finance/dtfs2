{
  "name": "dtfs",
  "version": "1.2.1",
  "description": "DTFS",
  "homepage": "https://github.com/UK-Export-Finance/dtfs2#readme",
  "bugs": {
    "url": "https://github.com/UK-Export-Finance/dtfs2/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/UK-Export-Finance/dtfs2.git"
  },
  "license": "MIT",
  "author": "",
  "workspaces": [
    "azure-functions/*",
    "dtfs-central-api",
    "e2e-tests",
    "external-api",
    "gef-ui",
    "libs/*",
    "portal",
    "portal-api",
    "trade-finance-manager-api",
    "trade-finance-manager-ui",
    "utils/*"
  ],
  "scripts": {
    "audit:all": "npm audit --if-present",
    "audit:fix:all": "npm audit --fix --if-present",
    "ci:all": "npm ci --if-present",
    "housekeeping": "npm run update:all && npm run install:all && npm run lint:fix:all && npm run audit:fix:all && npm run spellcheck",
    "postinstall": "husky install",
    "install:all": "npm install --if-present",
    "lint:all": "npm run lint --workspaces --if-present",
    "lint:fix:all": "npm run lint --fix --workspaces --if-present",
    "load": "node utils/mock-data-loader/re-insert-mocks.js",
    "spellcheck": "cspell lint --gitignore --no-must-find-files --unique --no-progress --show-suggestions --color '**/*'",
    "start": "docker compose up --build",
    "start:detach": "docker compose up --build -d",
    "stop": "docker compose down",
    "type-check:all": "npm run type-check --workspaces --if-present",
    "update:all": "npm update --save --if-present"
  },
  "lint-staged": {
    "**/package.json": "sort-package-json",
    "**/*.js": "eslint --fix",
    "**/*.ts": "eslint --fix",
    "**/*": [
      "cspell lint --gitignore --no-must-find-files --unique --no-progress --show-suggestions --color"
    ]
  },
  "dependencies": {
    "axios": "^1.6.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.8.1",
    "@commitlint/config-conventional": "^17.8.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "bson": "^6.2.0",
    "chance": "^1.1.11",
    "cookie-signature": "^1.2.1",
    "cspell": "^7.3.9",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^8.0.3",
    "jws": "^4.0.0",
    "lint-staged": "^14.0.1",
    "prettier": "3.0.3",
    "redis": "^3.1.2",
    "sort-package-json": "^2.10.0"
  },
  "engines": {
    "node": ">=20",
    "npm": ">=10"
  },
  "engineStrict": true
}
