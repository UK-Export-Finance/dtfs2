{% import '../_macros/table.njk' as table %}
{% import '../_macros/table-search-form.njk' as tableSearchForm %}
{% import '../_macros/pagination.njk' as pagination %}

{% extends "index.njk" %}

{% block pageTitle -%}
  {{- heading -}}
{%- endblock %}

{% block content %}
  <div class="govuk-grid-row">

    <div class="govuk-grid-column-three-quarters">
      <h2 class="header-label" data-cy="facilities-heading" aria-label="{{ heading }}">{{- heading -}}</h2>
    </div>

    <div class="govuk-grid-column-one-quarter govuk-!-padding-top-7">
      {{ tableSearchForm.render({
        tableName: 'facilities',
        csrfToken: csrfToken
      }) }}
    </div>
  </div>

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">

      {% set componentData = {
        csrfToken: csrfToken,
        itemNamePlural: 'facilities',
        itemNameSingular: 'facility',
        headings: [
          {
            isSortable: true,
            fieldName: 'ukefFacilityId',
            buttonText: 'Facility ID',
            buttonValue: 'ukefFacilityId'
          },
          {
            isSortable: true,
            fieldName: 'dealType',
            buttonText: 'Product',
            buttonValue: 'tfmFacilities.dealType'
          },
          {
            isSortable: true,
            fieldName: 'type',
            buttonText: 'Type',
            buttonValue: 'tfmFacilities.type'
          },
          {
            isSortable: true,
            fieldName: 'companyName',
            buttonText: 'Exporter',
            buttonValue: 'tfmFacilities.companyName'
          },
          {
            isSortable: true,
            fieldName: 'value',
            buttonText: 'Value (export currency)',
            buttonValue: 'tfmFacilities.value'
          },
          {
            isSortable: true,
            fieldName: 'coverEndDate',
            buttonText: 'Cover end date',
            buttonValue: 'tfmFacilities.coverEndDate'
          },
          {
            isSortable: true,
            fieldName: 'facilityStage',
            buttonText: 'Facility stage',
            buttonValue: 'facilityStage'
          }
        ],
        sortButtonWasClicked: sortButtonWasClicked,
        activeSortByOrder: activeSortByOrder,
        activeSortByField: activeSortByField,
        items: facilities,
        idFieldName: 'facilityId'
      } %}

      {{ table.render(componentData) }}

      {{ pagination.render({
        totalPages: pages.totalPages,
        currentPage: pages.currentPage,
        totalItems: pages.totalItems,
        paginationRoute: '/facilities',
        queryString: queryString
      })}}

    </div>
  </div>

{% endblock %}

{% block sub_content %}

{% endblock %}
