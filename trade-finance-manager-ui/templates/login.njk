{% from "govuk/components/inset-text/macro.njk" import govukInsetText %}

{% extends "index.njk" %}

{% block content %}

  <h1 class="govuk-heading-l govuk-!-padding-top-5" data-cy="sign-in-heading">Sign in</h1>

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-one-third">

      <form method="POST" autocomplete="off">
        <input type="hidden" name="_csrf" value="{{ csrfToken }}">
        <div class="govuk-form-group">
          <label class="govuk-label" for="email" data-cy="email-heading">
            Email address
          </label>
          <input class="govuk-input" id="email" name="email" type="text" autocapitalize="off" data-cy="email">
        </div>

        <div class="govuk-form-group">
          <label class="govuk-label" for="password" data-cy="password-heading">
            Password
          </label>
          <input class="govuk-input" id="password" name="password" type="password" autocomplete="off" data-cy="password">
        </div>


        <button class="govuk-button" data-module="govuk-button" data-cy="submit-button">
          Sign in
        </button>

      </form>

    </div>
  </div>

{% endblock %}
