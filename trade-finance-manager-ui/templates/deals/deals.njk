{% from "moj/components/sub-navigation/macro.njk" import mojSubNavigation %}
{% import './_macros/deals-table.njk' as dealsTable %}
{% import './_macros/deals-table-search-form.njk' as dealsTableSearchForm %}

{% extends "index.njk" %}
{% set primary = 'deals' %}

{% block pageTitle %}
  Trade Finance Manager
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">

    <div class="govuk-grid-column-three-quarters">
      <h2 class="header-label" data-cy="deals-heading">{{ heading }}</h2>
    </div>

    <div class="govuk-grid-column-one-quarter govuk-!-padding-top-7">
      {{ dealsTableSearchForm.render() }}
    </div>

  </div>

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">

      {% set componentData = {
        deals: deals,
        user: user
      } %}

      {{ dealsTable.render(componentData) }}

    </div>
  </div>

{% endblock %}

{% block sub_content %}

{% endblock %}
