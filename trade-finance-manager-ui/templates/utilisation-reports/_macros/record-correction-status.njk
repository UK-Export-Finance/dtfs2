{%- from "govuk/components/tag/macro.njk" import govukTag -%}

{% macro render(params) %}
  {% set status = params.status %}
  {% set displayStatus = params.displayStatus %}
  {% set statusTagColours = params.statusTagColours %}
  
  {% set tagColourClass = statusTagColours[status] %}

  {{ govukTag({
    text: displayStatus,
    classes: tagColourClass + " govuk-!-text-align-left",
    attributes: {
      'data-cy': 'record-correction-status'
    }
  }) }}
{% endmacro %}
