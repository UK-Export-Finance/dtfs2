{% macro render(params) %}
  {% set facilityId = params.facilityId %}
  {% set exporter = params.exporter %}
  {% set user = params.user %}

  <div class="block-header" data-cy="fee-record-summary-block-header">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-one-half">
        <div class="govuk-grid-column-one-third" data-cy="facility-id-label">
          <p><strong>Facility ID</strong></p>
        </div>
        <div class="govuk-grid-column-two-thirds" data-cy="facility-id">
          <p>{{ facilityId }}</p>
        </div>
      </div>
    </div>

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-one-half">
        <div class="govuk-grid-column-one-third" data-cy="exporter-label">
          <p><strong>Exporter</strong></p>
        </div>
        <div class="govuk-grid-column-two-thirds" data-cy="exporter">
          <p>{{ exporter }}</p>
        </div>
      </div>
    </div>

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-one-half">
        <div class="govuk-grid-column-one-third" data-cy="requested-by-label">
          <p><strong>Requested by</strong></p>
        </div>
        <div class="govuk-grid-column-two-thirds" data-cy="requested-by">
          <p>{{ (user.firstName + " " + user.lastName) }}</p>
        </div>
      </div>
    </div>
  </div>
{% endmacro %}