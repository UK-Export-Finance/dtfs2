{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% import './_macros/report-reconciliation-table.njk' as reportReconciliationTable %}

{% extends "index.njk" %}

{% block pageTitle %}
  Trade Finance Manager
{% endblock %}

{% block content %}
  <div class="govuk-grid-row govuk-!-padding-top-7">
    <div class="govuk-grid-column-one-half">
      <h1 class="govuk-heading-xl govuk-!-margin-bottom-6" data-cy="utilisation-report-heading">
        Bank reports
      </h1>
    </div>
  </div>

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
      <h2 class="govuk-heading-m" data-cy="report-period-heading">
        Current reporting period: {{ reportPeriod }} (monthly)
      </h2>
      <p class="govuk-body" data-cy="report-due-date-text">
        Reports due to be received by {{ reportDueDate }}.
      </p>

      {{ reportReconciliationTable.render({
        reportReconciliationSummary: reportReconciliationSummary,
        submissionMonth: submissionMonth,
        submissionYear: submissionYear,
        csrfToken: csrfToken
      }) }}
    </div>
  </div>
{% endblock %}

{% block sub_content %}{% endblock %}
