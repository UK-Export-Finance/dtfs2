{% extends "case/case.njk" %}
{% import './_macros/facility_details.njk' as details %}
{% import './_macros/premium_schedule.njk' as schedule %}
{% import './_macros/amendments.njk' as amendments %}
{% from "govuk/components/tabs/macro.njk" import govukTabs %}
{% from "govuk/components/table/macro.njk" import govukTable %}
{% from "moj/components/banner/macro.njk" import mojBanner %}

{% block sub_content %}
  {% set facilityDetailsHtml %}
    {% set detailsComponentData = {
      deal: deal,
      facility: facility,
      user: user,
      facilityTfm: facilityTfm
    } %}
    {{ details.render(detailsComponentData) }}
  {% endset %}

  {% set premiumScheduleHtml %}
    {% set scheduleComponentData = {
      facility: facility,
      facilityTfm: facilityTfm,
      user: user
    } %}
    {{ schedule.render(scheduleComponentData) }}
  {% endset %}

  {% set amendmentsHtml %}
    {% set amendmentsComponentData = {
      deal: deal,
      facility: facility,
      facilityId: facilityId,
      user: user,
      showAmendmentButton: showAmendmentButton,
      hasAmendmentInProgress: hasAmendmentInProgress,
      amendmentId: amendmentId,
      amendmentVersion: amendmentVersion,
      csrfToken: csrfToken
    } %}
    {{ amendments.render(amendmentsComponentData) }}
  {% endset %}

  {% set amendmentsHtml %}
    {% set amendmentsComponentData = {
      deal: deal,
      facility: facility,
      facilityId: facilityId,
      user: user,
      showAmendmentButton: showAmendmentButton,
      hasAmendmentInProgress: hasAmendmentInProgress,
      amendmentId: amendmentId,
      amendmentVersion: amendmentVersion,
      csrfToken: csrfToken
    } %}
    {{ amendments.render(amendmentsComponentData) }}
  {% endset %}

  {% if hasAmendmentInProgress === true %}
    {% set bannerHtml %}
      <p class="govuk-body">Amendment in progress for <a href="/case/{{dealId}}/facility/{{facilityId}}#amendments">{{facility.type}} {{facility.ukefFacilityId}}</a></p>
    {% endset %}

    {{ mojBanner({
      type: 'information',
      classes: 'govuk-!-margin-bottom-6 govuk-!-margin-top-6',
      html: bannerHtml
    }) }}
  {% endif %}

  <div>
    <h2 class="ukef-heading-grey">Facility {{ facility.ukefFacilityId }}</h2>
    <h3 class="govuk-heading-l">{{ facility.type }}</h3>
  </div>

  <div class="ukef-tabs--no-border">
  {{ govukTabs({
    items: [
      {
        label: "Details",
        id: "details",
         panel: {
          html: facilityDetailsHtml
        },
        attributes: {
          'data-cy': 'facility-details-tab-details'
        }
      },
      {
        label: "Premium schedule",
        id: "premium-schedule",
        panel: {
          html: premiumScheduleHtml
        },
        attributes: {
          'data-cy': 'facility-details-tab-premium-schedule'
        }
      },
      {
        label: "Amendments",
        id: "amendments",
        panel: {
          html: amendmentsHtml
        },
        attributes: {
          'data-cy': 'facility-details-tab-amendments'
        }
      }
    ]
  }) }}
  </div>

{% endblock %}
