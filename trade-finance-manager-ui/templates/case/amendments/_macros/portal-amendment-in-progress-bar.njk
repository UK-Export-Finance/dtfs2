 {% from "moj/components/banner/macro.njk" import mojBanner %}

 {% macro render(params) %}
  {% set hasInProgressPortalAmendments = params.hasInProgressPortalAmendments %}
  {% set inProgressPortalAmendments = params.inProgressPortalAmendments %}

  {% if hasInProgressPortalAmendments === true and inProgressPortalAmendments.length > 0 %}
    {% set bannerHtml %}
      <p class="govuk-body" data-cy="portal-amendment--in-progress-bar">There is an amendment in progress for this facility</p>
    {% endset %}

    {{ mojBanner({
      type: 'information',
      classes: 'govuk-!-margin-bottom-0 govuk-!-margin-top-6',
      html: bannerHtml
    }) }}
  {% endif %}

{% endmacro %}