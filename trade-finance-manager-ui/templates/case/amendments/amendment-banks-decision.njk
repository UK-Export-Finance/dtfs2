{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% import './_macros/banks-decision-submitted.njk' as banksDecisionSubmitted %}

{% macro render(params) %}

  {% set banksDecision = params.banksDecision %}

  {% block underwriting_content %}

    <div class="govuk-grid-row">

      <div class="govuk-grid-column-three-quarters">

        {% if banksDecision.underwriterManagersDecision.decision %}

          {% if banksDecision.banksDecision.decision %}

            {% set banksDecisionSubmittedComponentData = {
              decision: banksDecision.banksDecision.decision,
              user: banksDecision.banksDecision.user
            } %}

            {{banksDecisionSubmitted.render(banksDecisionSubmittedComponentData)}}

          {% else %}

            {% if banksDecision.isEditable %}
              <div class="govuk-!-padding-top-0">
                {{ govukButton({
                    text: "Add decision",
                    href: "/case/" + banksDecision.dealId + "/facility/" + banksDecision.facilityId + "/amendment/" + banksDecision.amendmentId + "/banks-decision",
                    attributes: {
                      "data-cy":"add-amendment-bank-decision-link"
                    }
                  }) }}
              </div>

            {% else %}

              <p class="govuk-!-margin-top-0" data-cy="amendment-bank-decision-not-added-readonly">{{banksDecision.isEditable }}Not added yet</p>

            {% endif %}

          {% endif %}


        {% else %}

          <p class="govuk-!-margin-top-0" data-cy="amendment-bank-decision-dependent">Dependent on the Underwriter manager's decision</p>

        {% endif %}

      </div>

    </div>

  {% endblock %}

{% endmacro %}