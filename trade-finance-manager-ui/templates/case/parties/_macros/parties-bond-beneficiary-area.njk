{% import './bond-beneficiary-facilities-table.njk' as bondBeneficiaryFacilitiesTable %}

{% macro render(params) %}
{% set deal = params.deal %}

<div class="govuk-grid-row separator-line deal">
  <h2 class="ukef-heading-l" data-cy="bond-issuer-heading">Bond beneficiary</h2>
  <p class="ukef-hint" style="margin-top:-36px" data-cy="bond-issuer-sub-heading">(if different to buyer)</p>

  <div class="govuk-grid-row deal">

    {% set componentData = {
      facilities: deal.facilities
    } %}

    {{ bondBeneficiaryFacilitiesTable.render(componentData) }}
  </div>

</div>
{% endmacro %}
