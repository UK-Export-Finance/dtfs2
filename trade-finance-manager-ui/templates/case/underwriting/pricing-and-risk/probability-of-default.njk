{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/button/macro.njk" import govukButton %}


{% extends "index.njk" %}

{% block content %}
  <section class="govuk-!-margin-top-9">

    {% if validationErrors.count %}
      {{
        govukErrorSummary({
          titleText: "There is a problem",
          errorList: validationErrors.summary,
          attributes: {
            'data-cy': 'error-summary'
          }
        })
      }}
    {% endif %}

    <div class="govuk-grid-row">

      <div class="govuk-grid-column-two-thirds">

        <form method="POST" autocomplete="off">
          <input type="hidden" name="_csrf" value="{{ csrfToken }}">
          {% set labelText = 'Whatâ€™s the probability of default for ' + deal.submissionDetails.supplierName + '?'%}

          {{ govukInput({
            label: {
              text: labelText,
              isPageHeading: true,
              classes: "govuk-label--l",
              attributes: {
                'data-cy': 'label-heading'
              }
            },
            value: tfm.probabilityOfDefault,
            classes: "govuk-input--width-5",
            id: "probabilityOfDefault",
            name: "probabilityOfDefault",
            attributes: {
              'data-cy': 'input-probability-of-default'
            },
            suffix: {
              text: "%"
            },
            spellcheck: false,
            errorMessage: validationErrors and validationErrors.errorList.probabilityOfDefault and {
              text: validationErrors.errorList.probabilityOfDefault.text,
              attributes: {
                'data-cy': 'probability-of-default-error'
              }
            }
          }) }}

          {{ govukButton({
            text: "Save",
            attributes: {
              'data-cy': 'submit-button'
            }
          }) }}

          <a class="govuk-body govuk-link govuk-!-margin-left-6 close-link" href="/case/{{ dealId }}/underwriting/pricing-and-risk" data-cy="close-link">Cancel</a>

        </form>

      </div>

    </div>

  </section>

{% endblock %}
