{% from "govuk/components/character-count/macro.njk" import govukCharacterCount %}

{% macro render(params) %}
  {% set validationError = params.validationError %}
  {% set id = params.id %}
  {% set label = params.label %}
 
  {{ govukCharacterCount({
    name: id,
    id: id,
    maxlength: 1000,
    rows: 9,
    label: {
      text: label
    },
    errorMessage: validationError and {
      text: validationError.text
    }
  }) }}

{% endmacro %}
