{% extends "index.njk" %}

{% import "../_macros/header-only-panel.njk" as headerOnlyPanel %}
{% import "../_macros/email-confirmation-list.njk" as emailConfirmationList %}

{% block pageTitle %}Confirmation{% endblock %}
{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {{ headerOnlyPanel.render({
        titleText: reportPeriod + ' GEF report sent to UKEF'
      }) }}

      {{ emailConfirmationList.render({
        emails: paymentOfficerEmails
      }) }}

      <a href="/logout" role="button" class="govuk-button" data-module="govuk-button" data-cy="logout-button">Sign out</a>
    </div>
  </div>
{% endblock %}
