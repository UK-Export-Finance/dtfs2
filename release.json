{
    "package-nam": "package.json",
    "pull-request-header": "chore(release): release version",
    "pull-request-title-pattern": "chore/release",
    "labels": [
        "chore",
        "docs"
    ],
    "release-labels": [
        "chore",
        "docs"
    ],
    "changelog-types": [
        {
            "type": "feat",
            "section": "Features",
            "hidden": false
        },
        {
            "type": "fix",
            "section": "Bug Fixes",
            "hidden": false
        },
        {
            "type": "chore",
            "section": "Miscellaneous",
            "hidden": false
        },
        {
            "type": "docs",
            "section": "Documentation",
            "hidden": false
        },
        {
            "type": "refactor",
            "section": "Code improvements",
            "hidden": false
        },
        {
            "type": "dependabot",
            "section": "Dependency updates",
            "hidden": false
        },
        {
            "type": "style",
            "section": "Design improvements",
            "hidden": false
        }
    ],
    "extra-files": [
        "README.md",
        "CHANGELOG.md"
    ]
}