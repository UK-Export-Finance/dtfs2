{% extends "index.njk" %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% block pageTitle -%}
  Are you sure you want to cancel the request?
{%- endblock %}

{% set headingHtml %}

{% endset %}

{% block content %}
  {{ govukBackLink({
      text: "Back",
      href: previousPage,
      attributes: {
        'data-cy': 'back-link'
      }
    })
  }}


  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <header>
        <span class="govuk-caption-l" data-cy="heading-caption">
          {{ exporterName }}, {{ facilityType }} facility
        </span>
        <h1 class="govuk-heading-xl govuk-!-margin-bottom-1" data-cy="page-heading">Are you sure you want to cancel the request?</h1>
        <p>You'll lose all the data you have entered and return to deal summary</p>
      </header>
      <form method="POST" autocomplete="off">
        <input type="hidden" name="_csrf" value="{{ csrfToken }}">
        <input type="hidden" name="previousPage" value="{{ previousPage }}">

        <div
          class="govuk-button-group govuk-!-margin-top-4"
        >
          {{ govukButton({
            text: "Yes, cancel",
            attributes: { "data-cy": "yes-cancel-button" }
            })
          }}
          {{ govukButton({
            text: "No, go back",
            classes: "govuk-button--secondary",
            href: previousPage,
            attributes: {
              "data-cy": "no-go-back-button"
            }
            })
          }}
        </div>
      </form>
    </div>
  </div>


{% endblock %}