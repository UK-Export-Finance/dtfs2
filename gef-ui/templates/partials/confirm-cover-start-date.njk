{% extends "index.njk" %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/table/macro.njk" import govukTable %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}

{% block pageTitle %}
    Confirm cover start date for issued facilities
{% endblock %}

{% block content %}

    {% if errors %}
        {{
            govukErrorSummary({
            titleText: "There is a problem",
            errorList: errors.errorSummary,
            attributes: {
                'data-cy': 'error-summary'
                }
            })
        }}
    {% endif %}

    {% set hideBack = true %}
    {% include "includes/application-preview/summary.njk" %}

    <div class="govuk-!-margin-bottom-6 govuk-grid-row">
        <div class="govuk-grid-column-full-from-desktop">
            {{ govukBackLink({
                text: "Back",
                href: "/gef/application-details/" + applicationId,
                attributes: {
                'data-cy': 'back-link'
                }
            }) }}
        </div>
    </div>

    {% if isUkefReviewAvailable %}
        <div class="govuk-grid-row govuk-body">
            <d  iv class="govuk-grid-column-two-thirds">
                    {{ govukTable
                        ({
                                caption: "Confirm cover start date for issued facilities",
                                captionClasses: "govuk-table__caption--xl",
                                firstCellIsHeader: true,
                                head: [
                                    {
                                    text: "Faciliy name"
                                    },
                                    {
                                    text: "UKEF Facility ID",
                                    format: "numeric"
                                    },
                                    {
                                    text: "Value"
                                    },
                                    {
                                    text: ""
                                    }
                                ],
                                rows: facilities
                        })
                    }}
            </div>
        </div>
    {% else %}
        Pending UKEF decision.
    {% endif %}

{% endblock %}