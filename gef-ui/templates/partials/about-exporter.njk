{% extends "index.njk" %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% block pageTitle %}About the exporter{% endblock %}

{% block content %}
  {% if errors %}
    {{ govukErrorSummary({
      titleText: "There is a problem",
      errorList: errors.errorSummary,
      attributes: {
        'data-cy': 'error-summary'
      }
    }) }}
  {% endif %}

  {{ govukBackLink({
    text: "Back to previous page",
    href: "/gef/application-details/" + applicationId + "/enter-exporters-correspondence-address",
    attributes: {
      'data-cy': 'back-link'
    }
  }) }}

  <header data-cy="application-details-page">
    <span class="govuk-caption-xl" data-cy="heading-caption">
      About the exporter
    </span>
    <h1 class="govuk-heading-xl" data-cy="main-heading">
      About the exporter
    </h1>
  </header>

  <div class="govuk-grid-row govuk-!-margin-bottom-3">
    <div class="govuk-grid-column-one-half">
      <p class="govuk-body" data-cy="industry-sector-title"><strong>Industry sector</strong></p>
      {% if industrySector %}
        <p class="govuk-body govuk-!-margin-bottom-7" data-cy="company-name">{{ industrySector }}</p>
      {% else %}
        <p class="govuk-body govuk-!-margin-bottom-7">—</p>
      {% endif %}
    
      <p class="govuk-body" data-cy="industry-sector-title"><strong>Industry class</strong></p>
      {% if industryClass %}
        <p class="govuk-body govuk-!-margin-bottom-7" data-cy="company-name">{{ industryClass }}</p>
      {% else %}
        <p class="govuk-body govuk-!-margin-bottom-7">—</p>
      {% endif %}

      <form
        method="post"
        data-cy="form">
        {{ govukRadios({
          idPrefix: "smeType",
          name: "smeType",
          classes: "govuk-!-margin-bottom-4",
          fieldset: {
            legend: {
              text: "What type of small to medium enterprise (SME) are they?",

              classes: "govuk-fieldset__legend--s"
            }
          },
          hint: {
            text: "Select one option"
          },
          errorMessage: errors and errors.fieldErrors.smeType and {
            text: errors.fieldErrors.smeType.text,
            attributes: {
              'data-cy': 'sme-type-error'
            }
          },
          items: [
            {
              value: "MICRO",
              text: "Micro",
              checked: smeType === "MICRO"
            },
            {
              value: "SMALL",
              text: "Small",
              checked: smeType === "SMALL"
            },
            {
              value: "MEDIUM",
              text: "Medium",
              checked: smeType === "MEDIUM"
            },
            {
              value: "NOT_SME",
              text: "They're not an SME",
              checked: smeType === "NOT_SME"
            }
          ]
        }) }}

        {{ govukInput({
          id: "probabilityOfDefault",
          name: "probabilityOfDefault",
          value: probabilityOfDefault,
          label: {
            text: "Enter the one year probability of default for the obligor (whoever is legally responsible for the debt)",
            classes: "govuk-label--s"
          },
          suffix: {
            text: "%"
          },
          classes: "govuk-input--width-5 govuk-!-margin-bottom-4",
          errorMessage: errors and errors.fieldErrors.probabilityOfDefault and {
            text: errors.fieldErrors.probabilityOfDefault.text,
            attributes: {
              'data-cy': 'probability-of-default0-error'
            }
          }
        }) }}

        {{ govukRadios({
          classes: "govuk-radios--inline govuk-!-margin-bottom-4",
          idPrefix: "isFinanceIncreasing",
          name: "isFinanceIncreasing",
          fieldset: {
            legend: {
              text: "Will  your financing to the exporter increase as a result  of this new facility that needs a GEF guarantee?",
              classes: "govuk-fieldset__legend--s"
            }
          },
          errorMessage: errors and errors.fieldErrors.isFinanceIncreasing and {
            text: errors.fieldErrors.isFinanceIncreasing.text,
            attributes: {
              'data-cy': 'is-financing-increasing'
            }
          },
          items: [
            {
              value: true,
              text: "Yes",
              checked: isFinanceIncreasing === true
            },
            {
              value: false,
              text: "No",
              checked: isFinanceIncreasing === false
            }
          ]
        }) }}

        <div class="govuk-button-group">
          {{ govukButton({
            text: "Continue",
            attributes: {
              'data-cy': 'continue-button'
            }
          }) }}

          {{ govukButton({
            text: "Return to application",
            classes: "govuk-button--secondary",
            attributes: {
              formaction: "about-exporter?returnToApplication=true",
              'data-cy': 'return-to-application'
            }
          }) }}
        </div>
      </form>
    </div>
  </div>

{% endblock %}
