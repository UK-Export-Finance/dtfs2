{% macro render(params) %}

  {% set id = params.id %}
  {% set text = params.text %}
  {% set textList = params.textList %}

  <p>{{ id }}. {{ text }}</p>

  {% if textList %}
    <div class="lower-roman-with-parens">
      <ol type="i">
        {% for item in textList %}
          <li>{{ item }}</li>
        {% endfor %}
      </ol>
    </div>

  {% endif %}

{% endmacro %}
