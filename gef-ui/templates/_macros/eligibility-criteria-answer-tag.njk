{% from "govuk/components/tag/macro.njk" import govukTag %}

{% macro render(params) %}

  {% set answerText = params.answer %}
  {% if params.answer === true %}
    {% set answerClass = 'govuk-tag--green' %}
  {% endif %}
  {% if params.answer === false %}
    {% set answerClass = 'govuk-tag--red' %}
  {% endif %}

  {{govukTag({
    text: answerText,
    classes: answerClass,
    attributes: {
      'data-cy': 'eligibility-criteria-answer-tag'
    }
  })}}

{% endmacro %}
