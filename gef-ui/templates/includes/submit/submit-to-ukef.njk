{% from "govuk/components/button/macro.njk" import govukButton %}

<p class="govuk-heading-l" data-cy="submit-heading">
  Submit or return
</p>
{% if submitAmendment %}
<p class="govuk-body">Submit to UKEF or return to maker for changes</p>
{% else %}
<p class="govuk-body">If this is ready, you can submit it to UKEF. Or you can return it to the maker to make changes.</p>
{% endif %}

{{ govukButton({
  text: "Submit to UKEF",
  href: "/gef/application-details/" + dealId + "/submit-to-ukef",
  attributes: {
    'data-cy': 'submit-button'
  }
}) }}

{{ govukButton({
  text: "Return to maker",
  classes: "govuk-button--secondary",
  href: "/gef/application-details/" + dealId + "/return-to-maker",
  attributes: {
    'data-cy': 'return-button'
  }
}) }}
