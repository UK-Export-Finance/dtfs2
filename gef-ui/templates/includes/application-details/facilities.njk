{%- from "govuk/components/tag/macro.njk" import govukTag -%}
{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}

<div class="govuk-grid-row">
  <div class="govuk-grid-column-one-half">
    <h2 class="govuk-heading-m" data-cy="main-heading">
      Facilities
    </h2>
  </div>

  <div class="govuk-grid-column-one-half">
    {{ govukTag({
      text: "Not started",
      classes: "govuk-tag--grey"
    }) }}
  </div>
</div>

{% if facilityRows.length < 1 %}
  <a class="govuk-link" href="/gef{{url}}/facility" data-cy="cancel">Add a facility</a>
{% else %}
  {{ govukSummaryList({
    rows: facilityRows
  }) }}
{% endif %}

<hr class="govuk-section-break govuk-section-break--bold govuk-section-break--l govuk-section-break--visible">
