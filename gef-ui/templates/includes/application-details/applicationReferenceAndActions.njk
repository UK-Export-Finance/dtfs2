{% from "govuk/components/button/macro.njk" import govukButton %}

<div class="govuk-width-container" data-cy="application-banner">
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-one-quarter">
      <p class="govuk-body"><strong>Bank's reference</strong></p>
      <p class="govuk-body"><strong>Additional reference</strong></p>
    </div>
    <div class="govuk-grid-column-one-quarter">
      <p class="govuk-body" data-cy="bank-reference"><a class="govuk-link" href="/gef/applications/{{applicationId}}/name" data-cy="edit-refname-link">{{ bankInternalRefName }}</a></p>
      <p class="govuk-body" data-cy="additional-reference"><a class="govuk-link" href="/gef/applications/{{applicationId}}/name" data-cy="edit-addrefname-link">{{ additionalRefName }}</a></p>
    </div>
    <div class="govuk-grid-column-one-half" style="text-align: right;">
      {%if abandon %}
        {{ govukButton({
          text: "Abandon",
          attributes: {
            "data-cy": "abandon-link"
          },
          classes: "govuk-button--secondary",
          href: "/gef/application-details/"+applicationId+"/abandon"
        }) }}
      {% endif %}
    </div>
  </div>
</div>