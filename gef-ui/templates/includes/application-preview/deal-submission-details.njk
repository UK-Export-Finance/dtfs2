{% if manualInclusionNoticeSubmissionDate %}
  {% set latestSubmissionDate = manualInclusionNoticeSubmissionDate %}
{% else %}
  {% set latestSubmissionDate = submissionDate %}
{% endif %}

<div class="govuk-grid-row">
  <hr class="application-banner-hr">
</div>
<div class="govuk-grid-row">
  <div class="govuk-grid-column-one-half">
    <div class="govuk-grid-column-one-third" data-cy="date-submitted-heading">
      <p>
        <strong>Sent to UKEF</strong>
      </p>
    </div>
    <div class="govuk-grid-column-two-thirds">
      <p data-cy="date-submitted">{{ latestSubmissionDate | localiseTimestamp('dd MMM yyyy', timezone)  | dashIfEmpty }}</p>
    </div>
  </div>
  <div class="govuk-grid-column-one-half">
    <div class="govuk-grid-column-one-third" data-cy="ukef-deal-id-heading">
      <p>
        <strong>UKEF deal ID</strong>
      </p>
    </div>
    <div class="govuk-grid-column-two-thirds">
      <p data-cy="ukef-deal-id">{{ ukefDealId | dashIfEmpty }}</p>
    </div>
  </div>
</div>