{% from "govuk/components/checkboxes/macro.njk" import govukCheckboxes %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{
{% extends "index.njk" %}

{% block content %}

  <h1 class="govuk-heading-l">
    {% if _id %}
      Edit user {{ user.username }}
    {% else %}
      User create
    {% endif %}
  </h1>
  
  {% if _id %}
    <p class="govuk-body">
      <a href="/admin/users/change-password/{{_id}}">Change password</a>
    </p>
  {% endif %}

   <form method="POST" autocomplete="off">

    {{ govukCheckboxes({
      idPrefix: "roles",
      name: "roles",
      classes: "govuk-checkboxes--small",
      fieldset: {
        legend: {
          text: "Roles",
          classes: "govuk-fieldset__legend--s"
        }
      },
      items: [
        {
          value: "maker/checker",
          text: "Maker/Checker"
        },
        {
          value: "checker",
          text: "Checker"
        },
        {
          value: "maker",
          text: "Maker"
        },
        {
          value: "ukef_operations",
          text: "UKEF Operations"
        },
        {
          value: "EFM",
          text: "EFM"
        }
      ]
    }) }}


    {% if _id %}
      <p class="govuk-body">Email<br/>{{ user.username }}</p>
      
      <p class="govuk-body">Display name<br/>{{ user.username }}</p>
    
    {% else %}

      {{ govukInput({
        label: {
          text: "Email address"
        },
        hint: {
          text: "A valid email address. All emails from the system will be sent to this address. The email address is not made public and will only be used if you wish to receive a new password or wish to receive certain news or notifications by email."
        },
        classes: "govuk-!-width-one-third",
        id: "email",
        name: "email"
      }) }}

       {% include "./_partials/password-create.njk" %}
    {% endif %}


  <div class="govuk-label">
  Status
  </div>
  {{ govukRadios({
    classes: "govuk-radios--inline",
    idPrefix: "changed-name",
    name: "changed-name",
    items: [
      {
        value: "blocked",
        text: "Blocked"
      },
      {
        value: "active",
        text: "Active"
      }
    ]
  }) }}

  {{ govukCheckboxes({
      idPrefix: "notify",
      name: "notify",
      classes: "govuk-checkboxes--small",
      items: [
        {
          value: "true",
          text: "Notify user of new account?"
        }
      ]
    }) }}

      {{ govukInput({
        label: {
          text: "First name"
        },
        classes: "govuk-!-width-one-third",
        id: "firstname",
        name: "firstname"
      }) }}

      {{ govukInput({
        label: {
          text: "Surname"
        },
        classes: "govuk-!-width-one-third",
        id: "surname",
        name: "surname"
      }) }}

    {% if _id %}
      <p class="govuk-body">Bank<br/>{{ user.bank.name }}</p>
    {% else %}
      <div class="govuk-form-group">
        <label class="govuk-label" for="bank">
          Bank
        </label>
        <span class="govuk-hint">
          This field is required when the user has a role "Bank staff".
        </span>
        <select class="govuk-select govuk-!-width-one-third" id="bank" name="bank">
          <option value="all">Any</option>
          {% for bank in banks %}
            <option value="{{ bank.id}}">{{ bank.name }}</option>
          {% endfor %}
        </select>
      </div>
    {% endif %}

    {% if _id %}

      {{ govukButton({
        text: "Save",
        href: "/admin/users/"
      }) }}

    {% else %}
      {{ govukButton({
        text: "Create user",
        href: "/admin/users/"
      }) }}
    {% endif %}
  
  </form>

{% endblock %}
