{% extends "index.njk" %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/textarea/macro.njk" import govukTextarea %}

{% block pageTitle %}Feedback{% endblock %}

{% block content %}

  <h1 class="govuk-heading-l">Feedback</h1>

  <form method="POST" autocomplete="off">

    {{ govukInput({
      label: {
        text: "What is your role?"
      },
      id: "role",
      name: "role",
      classes: "govuk-input--width-20"
    }) }}

    {{ govukInput({
      label: {
        text: "Which organisation do you work for?"
      },
      id: "organisation",
      name: "organisation",
      classes: "govuk-input--width-20"
    }) }}

    {{ govukRadios({
      idPrefix: "reasonForVisiting",
      name: "reasonForVisiting",
      fieldset: {
        legend: {
          text: "What was your reason for visiting the Beta service today?"
        }
      },
      items: [
        {
          value: "Submission of an automatic inclusion notice",
          text: "Submission of an automatic inclusion notice"
        },
        {
          value: "Submission of a manual inclusion application",
          text: "Submission of a manual inclusion application"
        },
        {
          value: "Submission of a manual inclusion notice",
          text: "Submission of a manual inclusion notice"
        },
        {
          value: "Other",
          text: "Other"
        }
      ],
      classes: "govuk-!-margin-bottom-6"
    }) }}

    <div class="govuk-form-group govuk-!-margin-bottom-9">

      <table class="govuk-table feedback-table">
        <caption class="govuk-table__caption">How would you rate the Beta service?</caption>

        <thead class="govuk-table__head">
          <tr class="govuk-table__row">
            <th scope="col" class="govuk-table__header"></th>
            <th scope="col" class="govuk-table__header">Very good</th>
            <th scope="col" class="govuk-table__header">Good</th>
            <th scope="col" class="govuk-table__header">Neither good nor poor</th>
            <th scope="col" class="govuk-table__header">Poor</th>
            <th scope="col" class="govuk-table__header">Very poor</th>
            <th scope="col" class="govuk-table__header">I don't know</th>
          </tr>
        </thead>

        <tbody class="govuk-table__body">

          <tr class="govuk-table__row">
            <td class="govuk-table__cell">
              a. Ease of use
            </td>
            <td class="govuk-table__cell">
              <div class="govuk-radios__item">
                <input class="govuk-radios__input" id="easeOfUse" name="easeOfUse" type="radio" value="Very good" aria-label="Very good">
                <label for="easeOfUse" class="govuk-label govuk-radios__label govuk-!-padding-0"></label>
              </div>
            </td>
            <td class="govuk-table__cell">
              <div class="govuk-radios__item">
                <input class="govuk-radios__input" id="easeOfUse-2" name="easeOfUse" type="radio" value="Good" aria-label="Good">
                <label for="easeOfUse-2" class="govuk-label govuk-radios__label govuk-!-padding-0"></label>
              </div>
            </td>
            <td class="govuk-table__cell">
              <div class="govuk-radios__item">
                <input class="govuk-radios__input" id="easeOfUse-3" name="easeOfUse" type="radio" value="Neither good nor poor" aria-label="Neither good nor poor">
                <label for="easeOfUse-3" class="govuk-label govuk-radios__label govuk-!-padding-0"></label>
              </div>
            </td>
            <td class="govuk-table__cell">
              <div class="govuk-radios__item">
                <input class="govuk-radios__input" id="easeOfUse-4" name="easeOfUse" type="radio" value="Poor" aria-label="Poor">
                <label for="easeOfUse-4" class="govuk-label govuk-radios__label govuk-!-padding-0"></label>
              </div>
            </td>
            <td class="govuk-table__cell">
              <div class="govuk-radios__item">
                <input class="govuk-radios__input" id="easeOfUse-5" name="easeOfUse" type="radio" value="Very poor" aria-label="Very poor">
                <label for="easeOfUse-5" class="govuk-label govuk-radios__label govuk-!-padding-0"></label>
              </div>
            </td>
            <td class="govuk-table__cell">
              <div class="govuk-radios__item">
                <input class="govuk-radios__input" id="easeOfUse-6" name="easeOfUse" type="radio" value="I don't know" aria-label="I don't know">
                <label for="easeOfUse-6" class="govuk-label govuk-radios__label govuk-!-padding-0"></label>
              </div>
            </td>
          </tr>

          <tr class="govuk-table__row">
            <td class="govuk-table__cell">b. Information required is clearly explained</td>
            <td class="govuk-table__cell">
              <div class="govuk-radios__item">
                <input class="govuk-radios__input" id="clearlyExplained" name="clearlyExplained" type="radio" value="Very good" aria-label="Very good">
                <label for="clearlyExplained" class="govuk-label govuk-radios__label govuk-!-padding-0"></label>
              </div>
            </td>
            <td class="govuk-table__cell">
              <div class="govuk-radios__item">
                <input class="govuk-radios__input" id="clearlyExplained-2" name="clearlyExplained" type="radio" value="Good" aria-label="Good">
                <label for="clearlyExplained-2" class="govuk-label govuk-radios__label govuk-!-padding-0"></label>
              </div>
            </td>
            <td class="govuk-table__cell">
              <div class="govuk-radios__item">
                <input class="govuk-radios__input" id="clearlyExplained-3" name="clearlyExplained" type="radio" value="Neither good nor poor" aria-label="Neither good nor poor">
                <label for="clearlyExplained-3" class="govuk-label govuk-radios__label govuk-!-padding-0"></label>
              </div>
            </td>
            <td class="govuk-table__cell">
              <div class="govuk-radios__item">
                <input class="govuk-radios__input" id="clearlyExplained-4" name="clearlyExplained" type="radio" value="Poor" aria-label="Poor">
                <label for="clearlyExplained-4" class="govuk-label govuk-radios__label govuk-!-padding-0"></label>
              </div>
            </td>
            <td class="govuk-table__cell">
              <div class="govuk-radios__item">
                <input class="govuk-radios__input" id="clearlyExplained-5" name="clearlyExplained" type="radio" value="Very poor" aria-label="Very poor">
                <label for="clearlyExplained-5" class="govuk-label govuk-radios__label govuk-!-padding-0"></label>
              </div>
            </td>
            <td class="govuk-table__cell">
              <div class="govuk-radios__item">
                <input class="govuk-radios__input" id="clearlyExplained-6" name="clearlyExplained" type="radio" value="I don't know" aria-label="I don't know">
                <label for="clearlyExplained-6" class="govuk-label govuk-radios__label govuk-!-padding-0"></label>
              </div>
            </td>
          </tr>

          <tr class="govuk-table__row">
            <td class="govuk-table__cell">c. Information required is easy to understand</td>
            <td class="govuk-table__cell">
              <div class="govuk-radios__item">
                <input class="govuk-radios__input" id="easyToUnderstand" name="easyToUnderstand" type="radio" value="Very good" aria-label="Very good">
                <label for="easyToUnderstand" class="govuk-label govuk-radios__label govuk-!-padding-0"></label>
              </div>
            </td>
            <td class="govuk-table__cell">
              <div class="govuk-radios__item">
                <input class="govuk-radios__input" id="easyToUnderstand-2" name="easyToUnderstand" type="radio" value="Good" aria-label="Good">
                <label for="easyToUnderstand-2" class="govuk-label govuk-radios__label govuk-!-padding-0"></label>
              </div>
            </td>
            <td class="govuk-table__cell">
              <div class="govuk-radios__item">
                <input class="govuk-radios__input" id="easyToUnderstand-3" name="easyToUnderstand" type="radio" value="Neither good nor poor" aria-label="Neither good nor poor">
                <label for="easyToUnderstand-3" class="govuk-label govuk-radios__label govuk-!-padding-0"></label>
              </div>
            </td>
            <td class="govuk-table__cell">
              <div class="govuk-radios__item">
                <input class="govuk-radios__input" id="easyToUnderstand-4" name="easyToUnderstand" type="radio" value="Poor" aria-label="Poor">
                <label for="easyToUnderstand-4" class="govuk-label govuk-radios__label govuk-!-padding-0"></label>
              </div>
            </td>
            <td class="govuk-table__cell">
              <div class="govuk-radios__item">
                <input class="govuk-radios__input" id="easyToUnderstand-5" name="easyToUnderstand" type="radio" value="Very poor" aria-label="Very poor">
                <label for="easyToUnderstand-5" class="govuk-label govuk-radios__label govuk-!-padding-0"></label>
              </div>
            </td>
            <td class="govuk-table__cell">
              <div class="govuk-radios__item">
                <input class="govuk-radios__input" id="easyToUnderstand-6" name="easyToUnderstand" type="radio" value="I don't know" aria-label="I don't know">
                <label for="easyToUnderstand-6" class="govuk-label govuk-radios__label govuk-!-padding-0"></label>
              </div>
            </td>
          </tr>

        </tbody>
      </table>
    </div>

    {{ govukRadios({
      idPrefix: "satisfied",
      name: "satisfied",
      fieldset: {
        legend: {
          text: "Overall, were you satisfied with the Beta service?"
        }
      },
      items: [
        {
          value: "Very satisfied",
          text: "Very satisfied"
        },
        {
          value: "Satisfied",
          text: "Satisfied"
        },
        {
          value: "Neither satisfied not dissatisfied",
          text: "Neither satisfied not dissatisfied"
        },
        {
          value: "Dissatisfied",
          text: "Dissatisfied"
        },
        {
          value: "Very dissatisfied",
          text: "Very dissatisfied"
        },
        {
          value: "I don't know",
          text: "I don't know"
        }
      ],
      classes: "govuk-!-margin-bottom-6"
    }) }}

    {{ govukTextarea({
      name: "howCanWeImprove",
      id: "howCanWeImprove",
      label: {
        text: "How can we improve this service? (optional)"
      },
      classes: "govuk-input--width-20"
    }) }}

    {{ govukInput({
      label: {
        text: "Help us make this service better (optional)"
      },
      hint: {
        text: "Leave your email address if you want to help with our user research."
      },
      id: "email",
      name: "email",
      classes: "govuk-input--width-20"
    }) }}

    <button class="govuk-button" data-module="govuk-button">Submit</button>

  </form>

{% endblock %}
