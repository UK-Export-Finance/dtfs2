{% from "govuk/components/radios/macro.njk" import govukRadios %}

{% macro render(dataCyValue, checkedValue, errorObj) %}

  {{ govukRadios({
    idPrefix: "premiumFrequency",
    name: "premiumFrequency",
    fieldset: {
      legend: {
        text: "Premium frequency"
      }
    },
    attributes: {
      'data-cy': dataCyValue + "-premium-frequency-radios"
    },
    items: [
      {
        value: "Monthly",
        text: "Monthly",
        checked: checkedValue === "Monthly"
      },
      {
        value: "Quarterly",
        text: "Quarterly",
        checked: checkedValue === "Quarterly"
      },
      {
        value: "Semi-annually",
        text: "Semi-annually",
        checked: checkedValue === "Semi-annually"
      },
      {
        value: "Annually",
        text: "Annually",
        checked: checkedValue === "Annually",
        attributes: {
          "data-cy": "premium-frequency-annually"
        }
      }
    ],
    errorMessage: errorObj and {
      text: errorObj.text,
      attributes: {
        "data-cy": "premium-frequency-error-message"
      }
    }
  }) }}
{% endmacro %}
