{% extends "index.njk" %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% import '_macros/bond-nav.njk' as bondNav %}

{% block content %}

  {{ bondNav.nav(
    completedStatus = bond.completedStatus,
    current = 'feeDetails',
    contractId = contractId,
    childId = bond._id
  )}}

  <hr class="govuk-section-break govuk-section-break--visible govuk-!-margin-bottom-8" />

  <form method="POST" autocomplete="off">

    <div class="govuk-grid-row">

      <div class="govuk-grid-column-three-quarters">

        {{ govukRadios({
          idPrefix: "feeType",
          name: "feeType",
          fieldset: {
            legend: {
              text: "Fee type"
            }
          },
          items: [
            {
              value: "In advance",
              text: "In advance",
              checked: bond.feeType === "In advance"
            },
            {
              value: "In arrear",
              text: "In arrear",
              checked: bond.feeType === "In arrear"
            },
            {
              value: "At maturity",
              text: "At maturity",
              checked: bond.feeType === "At maturity"
            }
          ]
        }) }}

        {{ govukRadios({
          idPrefix: "feeFrequency",
          name: "feeFrequency",
          fieldset: {
            legend: {
              text: "Fee frequency"
            }
          },
          items: [
            {
              value: "Monthly",
              text: "Monthly",
              checked: bond.feeFrequency === "Monthly"
            },
            {
              value: "Quarterly",
              text: "Quarterly",
              checked: bond.feeFrequency === "Quarterly"
            },
            {
              value: "Semi-annually",
              text: "Semi-annually",
              checked: bond.feeFrequency === "Semi-annually"
            },
            {
              value: "Annually",
              text: "Annually",
              checked: bond.feeFrequency === "Annually"
            }
          ]
        }) }}

        {{ govukRadios({
          idPrefix: "dayCountBasis",
          name: "dayCountBasis",
          fieldset: {
            legend: {
              text: "Day count basis"
            }
          },
          items: [
            {
              value: "360",
              text: "360",
              checked: bond.dayCountBasis === "360"
            },
            {
              value: "365",
              text: "365",
              checked: bond.dayCountBasis === "365"
            }
          ]
        }) }}

      </div>

    </div>

    <input type="submit" class="govuk-button govuk-!-margin-right-1" data-module="govuk-button" value="Preview" />

    <input
      type="submit"
      formaction="/contract/{{ contractId }}/bond/{{ bond._id }}/fee-details/save-go-back"
      class="govuk-button govuk-button--secondary"
      data-module="govuk-button"
      value="Save and go back to deal"
    />

  </form>

{% endblock %}
