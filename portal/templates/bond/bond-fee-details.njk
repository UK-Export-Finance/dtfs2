{% extends "index.njk" %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% import './_macros/bond-nav.njk' as bondNav %}
{% import './_macros/bond-fee-frequency.njk' as bondFeeFrequency %}

{% block content %}

  {% if validationErrors.count %}
    {{
      govukErrorSummary({
        titleText: "There is a problem",
        errorList: validationErrors.summary
      })
    }}
  {% endif %}

  {{ bondNav.nav(
    completedStatus = bond.completedStatus,
    current = 'feeDetails',
    contractId = dealId,
    childId = bond._id
  )}}

  <hr class="govuk-section-break govuk-section-break--visible govuk-!-margin-bottom-8" />

  <form method="POST" autocomplete="off">

    <div class="govuk-grid-row">

      <div class="govuk-grid-column-three-quarters">

        {{ govukRadios({
          idPrefix: "feeType",
          name: "feeType",
          fieldset: {
            legend: {
              text: "Fee type"
            }
          },
          items: [
            {
              value: "In advance",
              text: "In advance",
              checked: bond.feeType === "In advance",
              conditional: {
                html: bondFeeFrequency.render(
                  'inAdvance',
                  bond.feeFrequency,
                  validationErrors.errorList.feeFrequency
                )
              },
              attributes: {
                'data-cy': 'fee-type-in-advance'
              }
            },
            {
              value: "In arrear",
              text: "In arrear",
              checked: bond.feeType === "In arrear",
              conditional: {
                html: bondFeeFrequency.render(
                  'inArrear',
                  bond.feeFrequency,
                  validationErrors.errorList.feeFrequency
                )
              },
              attributes: {
                'data-cy': 'fee-type-in-arrear'
              }
            },
            {
              value: "At maturity",
              text: "At maturity",
              checked: bond.feeType === "At maturity",
              attributes: {
                'data-cy': 'fee-type-at-maturity'
              }
            }
          ],
          errorMessage: validationErrors.errorList.feeType and {
            text: validationErrors.errorList.feeType.text,
            attributes: {
              "data-cy": "fee-type-error-message"
            }
          }
        }) }}

        {{ govukRadios({
          idPrefix: "dayCountBasis",
          name: "dayCountBasis",
          fieldset: {
            legend: {
              text: "Day count basis"
            }
          },
          items: [
            {
              value: "360",
              text: "360",
              checked: bond.dayCountBasis === "360"
            },
            {
              value: "365",
              text: "365",
              checked: bond.dayCountBasis === "365",
              attributes: {
                'data-cy': 'day-count-basis-365'
              }
            }
          ],
          errorMessage: validationErrors.errorList.dayCountBasis and {
            text: validationErrors.errorList.dayCountBasis.text,
            attributes: {
              "data-cy": "day-count-basis-error-message"
            }
          }
        }) }}

      </div>

    </div>

    <button type="submit" class="govuk-button govuk-!-margin-right-1" data-module="govuk-button" data-cy="submit-button">Preview</button>

    <input
      type="submit"
      formaction="/contract/{{ dealId }}/bond/{{ bond._id }}/save-go-back"
      class="govuk-button govuk-button--secondary"
      data-module="govuk-button"
      value="Save and go back to deal"
      data-cy="save-go-back-button"
    />

  </form>

{% endblock %}
