{% from "govuk/components/radios/macro.njk" import govukRadios %}

{% macro render(id, checkedValue, errorObj) %}

  {{ govukRadios({
    idPrefix: id,
    name: id,
    fieldset: {
      legend: {
        text: "Fee frequency"
      }
    },
    formGroup: {
      classes: id + "-form-group"
    },
    items: [
      {
        value: "Monthly",
        text: "Monthly",
        checked: checkedValue === "Monthly"
      },
      {
        value: "Quarterly",
        text: "Quarterly",
        checked: checkedValue === "Quarterly"
      },
      {
        value: "Semi-annually",
        text: "Semi-annually",
        checked: checkedValue === "Semi-annually"
      },
      {
        value: "Annually",
        text: "Annually",
        checked: checkedValue === "Annually",
        attributes: {
          "data-cy": id + "-annually"
        }
      }
    ],
    errorMessage: errorObj
  }) }}
{% endmacro %}
