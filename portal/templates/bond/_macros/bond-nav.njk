{% import '_macros/progress-nav.njk' as progressNav %}

{% macro render(completedForms, current, contractId, childId, bondStatus) %}  

  <h1 class="govuk-heading-l">Bond</h1>

  <input type="hidden" value="{{ childId }}" data-cy="bond-id"/>

  <div class="govuk-grid-row govuk-!-margin-bottom-8">

    <div class="govuk-grid-column-one-half">

      {{ progressNav.navItem(
          title = 'Bond details',
          id = 'bondDetails',
          step = 1,
          completed = completedForms.bondDetails,
          href = 'bond',
          childId = childId,
          childHref = 'details',
          contractId = contractId,
          current = current
      )}}

      {{ progressNav.navItem(
          title = 'Bond financial details',
          id = 'bondFinancialDetails',
          step = 2,
          completed = completedForms.bondFinancialDetails,
          href = 'bond',
          childId = childId,
          childHref = 'financial-details',
          contractId = contractId,
          current = current
      )}}

      {{ progressNav.navItem(
          title = 'Fee details',
          id = 'feeDetails',
          step = 3,
          completed = completedForms.bondFeeDetails,
          href = 'bond',
          childId = childId,
          childHref = 'fee-details',
          contractId = contractId,
          current = current
      )}}
      
    </div>

    <div class="govuk-grid-column-one-half">

      {{ progressNav.navItem(
          title = 'Check your answers',
          id = 'preview',
          status = bondStatus,
          href = 'bond',
          childId = childId,
          childHref = 'check-your-answers',
          contractId = contractId,
          current = current
      )}}
      
    </div>

  </div>    

{% endmacro %}
