{% macro pagination(totalPages, currentPage, totalItems, paginationRoot) %}

  <div class="breadcrumbs" role="navigation">

    {% if totalPages > 1 %}

      <div role="navigation">
        <h4 class="govuk-visually-hidden">Pagination</h4>

        <ul class="govuk-!-margin-bottom-0">

          {% if currentPage !== 0 %}
            <li class="govuk-body govuk-!-margin-bottom-3">
              <a href="{{paginationRoot}}/0" class="govuk-link">First</a>
            </li>

            <li class="govuk-body govuk-!-margin-bottom-3">
              <a href="{{paginationRoot}}/{{currentPage-1}}" class="govuk-link">Previous</a>
            </li>

            <li class="govuk-body govuk-!-margin-bottom-3">
              ...
            </li>

          {% endif %}

          {% for i in range(currentPage - 5, totalPages) %}
            {% if loop.index < 10 and i + 1 > 0 %}
              <li
                {% if i + 1 === currentPage %}
                  class="govuk-body govuk-!-margin-bottom-3 active"
                {% else %}
                  class="govuk-body govuk-!-margin-bottom-3"
                {% endif %}
              >
                <a href="{{paginationRoot}}/{{i}}" class="govuk-link">{{ i + 1 }}</a>
              </li>
            {% endif %}
          {%- endfor %}

          {% if currentPage !== (totalPages-1) %}
            <li class="govuk-body govuk-!-margin-bottom-3">
              ...
            </li>

            <li class="govuk-body govuk-!-margin-bottom-3">
              <a href="{{paginationRoot}}/{{currentPage+1}}" class="govuk-link">Next</a>
            </li>

            <li class="govuk-body govuk-!-margin-bottom-3">
              <a href="{{paginationRoot}}/{{totalPages-1}}" class="govuk-link">Last</a>
            </li>
          {% endif %}

        </ul>

      </div>
    {% endif %}

    <p id="totalItems" class="govuk-body-s">({{ totalItems }} items)</p>

  </div>

{% endmacro %}
