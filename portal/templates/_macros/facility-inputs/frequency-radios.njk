{% from "govuk/components/radios/macro.njk" import govukRadios %}

{% macro render(id, label, checkedValue, errorObj) %}

  {{ govukRadios({
    idPrefix: id + "Frequency",
    name: id + "Frequency",
    fieldset: {
      legend: {
        text: label
      }
    },
    items: [
      {
        value: "Monthly",
        text: "Monthly",
        checked: checkedValue === "Monthly"
      },
      {
        value: "Quarterly",
        text: "Quarterly",
        checked: checkedValue === "Quarterly"
      },
      {
        value: "Semi-annually",
        text: "Semi-annually",
        checked: checkedValue === "Semi-annually"
      },
      {
        value: "Annually",
        text: "Annually",
        checked: checkedValue === "Annually",
        attributes: {
          "data-cy": id + "-frequency-annually"
        }
      }
    ],
    errorMessage: errorObj and {
      text: errorObj.text,
      attributes: {
        "data-cy": "frequency-error-message"
      }
    }
  }) }}
{% endmacro %}
