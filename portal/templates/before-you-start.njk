{% extends "index.njk" %}

{% block content %}

  <h1 class="govuk-heading-l">Mandatory criteria</h1>

  <h2 class="govuk-heading-m">Does this deal meet all UKEFâ€™s mandatory criteria?</h2>

  <p class="govuk-body">To proceed with this submission, you need to be able to affirm that all the following mandatory criteria are or will be true for this deal on the date that cover starts.</p>

  {% for group in mandatoryCriteria %}
    <h2 class="govuk-heading-m">{{ group.title }}</h2>

    <ol class="govuk-list govuk-list--number">
      {% for item in group.items %}
        <li value="{{ item.id }}">{{ item.copy | safe}}</li>
      {% endfor %}
    </ol>

  {% endfor %}

  <hr class="govuk-section-break" />

  <p class="govuk-body">Confirmation</p>

  <form>
    <div class="govuk-form-group">
      <fieldset class="govuk-fieldset">
        <legend class="govuk-fieldset__legend govuk-fieldset__legend--xl">
          <p class="govuk-body">
            All of the above mandatory criteria are true for this supply contract.
          </p>
        </legend>
        <div class="govuk-radios govuk-radios--inline">
          <div class="govuk-radios__item">
            <input class="govuk-radios__input" id="criteria-met" name="criteria-met" type="radio" value="yes">
            <label class="govuk-label govuk-radios__label" for="criteria-met">
              True
            </label>
          </div>
          <div class="govuk-radios__item">
            <input class="govuk-radios__input" id="criteria-met-2" name="criteria-met" type="radio" value="no">
            <label class="govuk-label govuk-radios__label" for="criteria-met-2">
              False
            </label>
          </div>
        </div>
      </fieldset>
    </div>

    <button class="govuk-button" data-module="govuk-button">Submit</button>

  </form>

{% endblock %}
