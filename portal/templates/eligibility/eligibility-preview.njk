{% extends "index.njk" %}
{% import '_macros/confirm-eligibility-nav.njk' as confirmEligibility %}
{% import '_macros/mandatory-criteria-box.njk' as mandatoryCriteriaBox %}
{% import '_macros/eligibility-criteria-answers.njk' as eligibilityCriteriaAnswers %}
{% import '_macros/eligibility-documentation-preview.njk' as eligibilityDocumentation %}

{% block pageTitle %}Eligibility Criteria Preview - {{ deal.details.bankSupplyContractName }}{% endblock %}

{% block content %}

  {{ confirmEligibility.nav(
    completedStatus = deal.eligibility.completedStatus,
    current = 'preview',
    contractId = deal._id
  )}}

  <hr class="govuk-section-break govuk-section-break--visible govuk-!-margin-bottom-8">

  {% include "_partials/print-button.njk" %}

  {{ mandatoryCriteriaBox.success(mandatoryCriteria)}}

  {{ eligibilityCriteriaAnswers.render(deal.eligibility.criteria)}}

  {{ eligibilityDocumentation.render(deal.dealFiles, deal._id)}}

  <hr class="govuk-section-break govuk-!-margin-bottom-8">

  <p class="govuk-body"><a href="/contract/{{ deal._id }}" class="govuk-link" data-cy="save-go-back-button">Save and go back to deal</a></p>

{% endblock %}
