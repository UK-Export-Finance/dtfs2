{% extends "index.njk" %}
{%- from "moj/components/side-navigation/macro.njk" import mojSideNavigation -%}
    {% block pageTitle %}
Previous Reports
{% endblock %}
    {% block content %}
        {% if not navItems.length %}
            <h1 class="govuk-heading-l" data-cy="main-heading"> Previous reports
        </h1>
        <p class="govuk">No reports have been submitted.</p>
    {% else %}
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-one-quarter">
                {{ mojSideNavigation({
                label: 'Side navigation',
                items: navItems
            }) }}
            </div>
            <div class="govuk-grid-column-three-quarters">
                <h1 class="govuk-heading-l" data-cy="main-heading">
                    {{ year }} reports
                </h1>
                {% if not reports.length %}
                <p class="govuk">No reports have been submitted.</p>
                {% else %}
                <p class="govuk">Reports are downloaded as CSV files.</p>
                <ul class="govuk-list">
                    {% for item in reports %}
                        <li>
                            <a class="govuk-link" href="{{ item.path }}">{{ item.month }}
                                {{ year }}</a>
                        </li>
                    {% endfor %}
                </ul>
                {% endif %}
            </div>
        </div>
    {% endif %}
{% endblock %}