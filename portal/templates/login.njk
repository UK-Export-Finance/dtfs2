{% from "govuk/components/inset-text/macro.njk" import govukInsetText %}

{% extends "index.njk" %}

{% block content %}

  {% if passwordreset %}

    {{ govukInsetText({
      classes: "govuk-!-margin-top-0",
      text: "Further instructions have been sent to your email address."
    }) }}

  {% endif %}

  <h1 class="govuk-heading-l">Log in</h1>

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-one-third">
      <form method="POST" autocomplete="off">

        <div class="govuk-form-group">
          <label class="govuk-label" for="email">
            Email
          </label>
          <input data-cy="email" class="govuk-input" id="email" name="email" type="text">
        </div>

        <div class="govuk-form-group">
          <label class="govuk-label" for="password">
            Password
          </label>
          <input data-cy="password" class="govuk-input" id="password" name="password" type="password">
        </div>


        <button data-cy="LogIn" class="govuk-button" data-module="govuk-button">
          Log in
        </button>

      </form>
    </div>
  </div>

  <p class="govuk-body govuk-!-margin-bottom-6"><a class="govuk-link" href="/reset-password">Forgot your password?</a></p>

  <h2 class="govuk-heading-m">Having trouble with this page?</h2>

  {% include "_partials/contact-us.njk" %}

{% endblock %}
