{% import '_macros/date-range.njk' as dateRange %}

{% macro render(filter, user, banks) %}

  <div class="govuk-grid-row govuk-!-margin-bottom-4">
    {{ dateRange.inputs(fromLegend = 'Creation date', toLegend = 'And', values = filter ) }}
  </div>

  <div class="govuk-grid-row">

    <div class="govuk-grid-column-one-third">
      <div class="govuk-form-group">
        <label class="govuk-label" for="filterSearch">
          Search
        </label>
        <input data-cy="search" class="govuk-input" id="filterSearch" name="filterSearch" type="text" value="{{filter.filterSearch}}" data-cy="filterSearch">
      </div>
    </div>

  </div>


{% endmacro %}
