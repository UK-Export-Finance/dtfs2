{% from "govuk/components/table/macro.njk" import govukTable %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% macro render(params) %}
  {% set deals = params.deals %}
  {% set userTimezone = params.userTimezone %}
  {% set activeSortByOrder = params.activeSortByOrder %}
  {% set defaultSortByOrder = 'updatedAt' %}
  {% set csrfToken = params.csrfToken %}

  <form method="POST" autocomplete="off" novalidate>
    <input type="hidden" name="_csrf" value="{{ csrfToken }}">

    {% set rows = [] %}

    {% for deal in deals %}

      {% if deal.product === 'GEF' %}
        {% set url = '/gef/application-details/' %}

        {% else %}

        {% set url = '/contract/' %}
      {% endif %}

      {% set linkHtml %}
        <a
          href="{{ url }}{{ deal._id }}"
          class="govuk-link"
          data-cy="deal__link--index--{{ loop.index }} deal__link--{{ deal._id }}"
        >
          {{ deal.bankInternalRefName }}
        </a>
      {% endset %}

      {% set dealRow = [
        {
          text: deal.exporter or "-",
          attributes: {
            "data-cy": "deal__exporter--index--" + loop.index + " deal__exporter--" + deal._id
          }
        },
        {
          html: linkHtml,
          attributes: {
            "data-cy": "deal__bankRef--index--" + loop.index + " deal__bankRef" + deal._id
          }
        },
        {
          text: deal.product or "-",
          attributes: {
            "data-cy": deal__product--index--" + loop.index + " deal__product--" + deal._id
          }
        },
        {
          text: deal.submissionType or "-",
          attributes: {
            "data-cy": deal__submissionType--index--" + loop.index + " deal__submissionType--" + deal._id
          }
        },
        {
          text: deal.status or "-",
          attributes: {
            "data-cy": "deal__status--index--" + loop.index + " deal__status--" + deal._id
          }
        },
        {
          text: deal.updatedAt | localiseTimestamp("d MMM yyyy", userTimezone) or "-",
          attributes: {
            'data-cy': deal__updated--index--" + loop.index + " deal__updated--"" + deal._id
          }
        }
      ] %}

      {% set rows = (rows.push(dealRow), rows) %}
    {% endfor %}

    {% set exporterHTML %}
      {% set buttonValue = 'ascending' %}

      {% if activeSortByOrder === 'ascending' %}
        {% set buttonValue = 'descending' %}
      {% endif %}

      <button
        type="submit"
        name="sortBy"
        value="{{ buttonValue }}"
        data-cy="deal__header--exporter-button">
        Exporter
      </button>

    {% endset %}

    {{govukTable({
      classes: "govuk-table govuk-!-margin-bottom-0",
      head: [
        {
          text: "Exporter",
          html: exporterHTML,
          value: buttonValue,
          attributes: {
            "data-cy": "deal__header--exporter",
            "aria-sort": activeSortByOrder or defaultSortByOrder
          }
        },
        {
          text: "Bank ref",
          attributes: {
            "data-cy": "deal__header--bankRef"
          }
        },
        {
          text: "Product",
          attributes: {
            "data-cy": "deal__header--product"
          }
        },
        {
          text: "Type",
          attributes: {
            "data-cy": "deal__header--type"
          }
        },
        {
          text: "Status",
          attributes: {
            "data-cy": "deal__header--status"
          }
        },
        {
          text: "Last updated",
          attributes: {
            "data-cy": "deal__header--updated"
          }
        }
      ],
      rows: rows
    })}}

  </form>

{% endmacro %}
