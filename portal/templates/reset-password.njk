{% from "govuk/components/inset-text/macro.njk" import govukInsetText %}
{% extends "index.njk" %}
{% block pageTitle %}Reset your password{% endblock %}

{% block content %}

  {% if passwordreseterror %}
    
    {{ govukInsetText({
      classes: "govuk-!-margin-top-0",
      text: "There was a problem resetting the password. Please try again.",
      attributes: {
        "data-cy": "reset-password-error"
      }
    }) }}

  {% endif %}

  <h1 class="govuk-heading-l">Reset your password</h1>

      <form method="POST" autocomplete="off">

        <div class="govuk-form-group govuk-!-width-one-third">
          <label class="govuk-label" for="email">
            Email
          </label>
          <input data-cy="email" autocapitalize="off" class="govuk-input" id="email" name="email" type="text">
        </div>

        <p class="govuk-body">
          Password reset instructions will be sent to your registered email address.
        </p>

        <button data-cy="reset-password-submit" class="govuk-button" data-module="govuk-button">
          Submit
        </button>

      </form>


  <h2 class="govuk-heading-m">Having trouble with this page?</h2>

  {% include "_partials/contact-us.njk" %}

{% endblock %}
