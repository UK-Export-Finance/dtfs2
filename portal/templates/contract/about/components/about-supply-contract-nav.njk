{% import '_macros/progress-nav.njk' as progressNav %}

{% macro nav(completedStatus, current, contractId, childId) %}

  <h1 class="govuk-heading-l">About the Supply Contract</h1>

  <div class="govuk-grid-row govuk-!-margin-bottom-8">

    <div class="govuk-grid-column-one-half">

      {{ progressNav.navItem(
          title = 'Supplier and counter-indemnifier/guarantor',
          id = 'supplierAndGuarantor',
          step = 1,
          completed = completedStatus.supplierAndGuarantor,
          href = 'about/supplier',
          contractId = contractId,
          current = current
      )}}

      {{ progressNav.navItem(
          title = 'Buyer',
          id = 'buyer',
          step = 2,
          completed = completedStatus.buyer,
          href = 'about/buyer',
          contractId = contractId,
          current = current
      )}}

      {{ progressNav.navItem(
          title = 'Financial information',
          id = 'financialInformation',
          step = 3,
          completed = completedStatus.financialInformation,
          href = 'about/financial',
          contractId = contractId,
          current = current
      )}}

    </div>

    <div class="govuk-grid-column-one-half">

      {{ progressNav.navItem(
          title = 'Check your answers',
          id = 'preview',
          completed = false,
          href = 'about/check-your-answers',
          contractId = contractId,
          current = current,
          ariaLabel = 'Check your answers on this supply contract'
      )}}

    </div>

  </div>

{% endmacro %}
