{% extends "index.njk" %}

{% block content %}

  <h1 class="govuk-heading-l">Change name of Supply Contract</h1>

  <form method="POST" autocomplete="off">

    <div class="govuk-grid-row">

      <div class="govuk-grid-column-one-half">

        <div class="govuk-form-group">
          <label class="govuk-label" for="bankSupplyContractName">
            Supply Contract name
          </label>
          <input data-cy="bankSupplyContractName" class="govuk-input" id="bankSupplyContractName" name="bankSupplyContractName" type="text" value="{{ details.bankSupplyContractName }}">
        </div>

      </div>
    </div>

    <button data-cy="Submit" class="govuk-button govuk-!-margin-right-1" data-module="govuk-button">
      Update Supply Contract Name
    </button>

    <a href="/contract/{{ _id }}" role="button" draggable="false" class="govuk-button govuk-button--secondary" data-module="govuk-button">Cancel</a>

  </form>

{% endblock %}
