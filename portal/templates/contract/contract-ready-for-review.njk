{% extends "index.njk" %}

{% block content %}

  <h1 class="govuk-heading-l">Are you sure this Supply Contract is ready for review?</h1>

  <form autocomplete="off">

    <div class="govuk-grid-row">

      <div class="govuk-grid-column-three-quarters">

        <div class="govuk-form-group">
          <label class="govuk-label" for="comments">Comments</label>
          <span id="comments-hint" class="govuk-hint">
             This information will be visible to the Checker.
          </span>
          <textarea class="govuk-textarea" id="comments" name="comments" rows="5" aria-describedby="comments-hint"></textarea>
        </div>
      </div>
    </div>

    <button class="govuk-button govuk-!-margin-right-1" data-module="govuk-button">
      Ready for Checker's approval
    </button>

    <a href="/contract/{{ _id }}" role="button" draggable="false" class="govuk-button govuk-button--secondary" data-module="govuk-button">Cancel</a>

  </form>

{% endblock %}

