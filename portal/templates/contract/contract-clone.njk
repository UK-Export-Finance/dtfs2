{% extends "index.njk" %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}

{% block content %}

  {% if validationErrors.count %}
    {{
      govukErrorSummary({
        titleText: "There is a problem",
        errorList: validationErrors.summary
      })
    }}
  {% endif %}


  <h1 class="govuk-heading-l">Clone Deal ABC</h1>

  <form method="POST" autocomplete="off">

    <div class="govuk-grid-row">

      <div class="govuk-grid-column-one-half">

        <div
          {% if validationErrors.errorList.bankDealId %}
            class="govuk-form-group govuk-form-group--error"
          {% else %}
            class="govuk-form-group"
          {% endif %}
        >
          <div class="govuk-character-count" data-module="govuk-character-count" data-maxlength="100">
            <div class="govuk-form-group">
              <label class="govuk-label" for="bankDealId">
                Bank deal ID
              </label>

              <span id="bankDealId-hint" class="govuk-hint">
                It's not possible to change this later. 
              </span>

              {% if validationErrors.errorList.bankDealId %}
                <span id="bankDealId-error" class="govuk-error-message">
                  <span class="govuk-visually-hidden">Error:</span> {{ validationErrors.errorList.bankDealId }}
                </span>
              {% endif %}

              <input class="govuk-input govuk-!-width-one-half govuk-js-character-count" id="bankDealId" name="bankDealId" type="text" maxlength="30" aria-describedby="bankDealId-info bankDealId-hint bankDealId-error" value="{{ details.bankDealId }}" data-cy="bank-deal-id">
            </div>

            <span id="bankDealId-info" class="govuk-hint govuk-character-count__message" aria-live="polite">
              You can enter up to 30 characters
            </span>
          </div>
        </div>

        <div
          {% if validationErrors.errorList.bankDealName %}
            class="govuk-form-group govuk-form-group--error"
          {% else %}
            class="govuk-form-group"
          {% endif %}
        >

          <div class="govuk-character-count" data-module="govuk-character-count" data-maxlength="100">
            <div class="govuk-form-group">
              <label class="govuk-label" for="bankDealName">
                Bank deal name
              </label>

              {% if validationErrors.errorList.bankDealName %}
                <span id="bankDealName-error" class="govuk-error-message">
                  <span class="govuk-visually-hidden">Error:</span> {{ validationErrors.errorList.bankDealName }}
                </span>
              {% endif %}

              <input class="govuk-input govuk-!-width-one-half govuk-js-character-count" id="bankDealName" name="bankDealName" type="text" maxlength="100" aria-describedby="bankDealName-info bankDealName-error" value="{{ details.bankDealName }}" data-cy="bank-deal-name">
            </div>

            <span id="bankDealName-info" class="govuk-hint govuk-character-count__message" aria-live="polite">
              You can enter up to 100 characters
            </span>
          </div>
        </div>

      </div>
    </div>

    {{
      govukRadios({
        classes: "govuk-radios--inline",
        idPrefix: "cloneTransactions",
        name: "cloneTransactions",
        fieldset: {
          legend: {
            text: "Do you want to clone this deal with transactions?",
            isPageHeading: true,
            classes: "govuk-fieldset__legend"
          }
        },
        items: [
          {
            value: "true",
            text: "Yes"
          },
          {
            value: "false",
            text: "No"
          }
        ],
        errorMessage: {
          text: validationErrors.errorList.cloneTransactions
        }
      })
    }}

    <button class="govuk-button" data-module="govuk-button">
      Clone
    </button>

  </form>

{% endblock %}

