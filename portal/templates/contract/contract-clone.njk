{% extends "index.njk" %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}

{% block content %}

  {% if validationErrors.count %}
    {{
      govukErrorSummary({
        titleText: "There is a problem",
        errorList: validationErrors.summary
      })
    }}
  {% endif %}


  <h1 class="govuk-heading-l">Clone Deal ABC</h1>

  <form method="POST" autocomplete="off">

    <div class="govuk-grid-row">

      <div class="govuk-grid-column-one-half">

        <div
          {% if validationErrors.errorList.bankSupplyContractID %}
            class="govuk-form-group govuk-form-group--error"
          {% else %}
            class="govuk-form-group"
          {% endif %}
        >
          <div class="govuk-character-count" data-module="govuk-character-count" data-maxlength="100">
            <div class="govuk-form-group">
              <label class="govuk-label" for="bankSupplyContractID">
                Bank deal ID
              </label>

              <span id="bankSupplyContractID-hint" class="govuk-hint">
                It's not possible to change this later. 
              </span>

              {% if validationErrors.errorList.bankSupplyContractID %}
                <span id="bankSupplyContractID-error" class="govuk-error-message">
                  <span class="govuk-visually-hidden">Error:</span> {{ validationErrors.errorList.bankSupplyContractID.text }}
                </span>
              {% endif %}

              <input class="govuk-input govuk-!-width-one-half govuk-js-character-count" id="bankSupplyContractID" name="bankSupplyContractID" type="text" maxlength="30" aria-describedby="bankSupplyContractID-info bankSupplyContractID-hint bankSupplyContractID-error" value="{{ details.bankSupplyContractID }}" data-cy="bank-supply-contract-id">
            </div>

            <span id="bankSupplyContractID-info" class="govuk-hint govuk-character-count__message" aria-live="polite">
              You can enter up to 30 characters
            </span>
          </div>
        </div>

        <div
          {% if validationErrors.errorList.supplyContractName %}
            class="govuk-form-group govuk-form-group--error"
          {% else %}
            class="govuk-form-group"
          {% endif %}
        >

          <div class="govuk-character-count" data-module="govuk-character-count" data-maxlength="100">
            <div class="govuk-form-group">
              <label class="govuk-label" for="supplyContractName">
                Bank deal name
              </label>

              {% if validationErrors.errorList.supplyContractName %}
                <span id="supplyContractName-error" class="govuk-error-message">
                  <span class="govuk-visually-hidden">Error:</span> {{ validationErrors.errorList.supplyContractName.text }}
                </span>
              {% endif %}

              <input class="govuk-input govuk-!-width-one-half govuk-js-character-count" id="supplyContractName" name="supplyContractName" type="text" maxlength="100" aria-describedby="supplyContractName-info supplyContractName-error" value="{{ details.supplyContractName }}" data-cy="bank-supply-contract-name">
            </div>

            <span id="supplyContractName-info" class="govuk-hint govuk-character-count__message" aria-live="polite">
              You can enter up to 100 characters
            </span>
          </div>
        </div>

      </div>
    </div>

    {{
      govukRadios({
        classes: "govuk-radios--inline",
        idPrefix: "cloneTransactions",
        name: "cloneTransactions",
        fieldset: {
          legend: {
            text: "Do you want to clone this deal with transactions?",
            isPageHeading: true,
            classes: "govuk-fieldset__legend"
          }
        },
        items: [
          {
            value: "true",
            text: "Yes",
            attributes: {
              "data-cy": "clone-transactions"
            }
          },
          {
            value: "false",
            text: "No"
          }
        ],
        errorMessage: validationErrors.errorList.cloneTransactions
      })
    }}

    <button class="govuk-button" data-module="govuk-button">
      Clone
    </button>

  </form>

{% endblock %}

