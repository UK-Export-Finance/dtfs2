{% from "./_macros/request-new-login-link.njk" import requestNewLoginLink %}

{% extends "index.njk" %}

{% block pageTitle %}
  Expired sign in link
{% endblock %}

{% block content %}
  <h1 class="govuk-heading-xl">
    Your sign in link has expired
  </h1>

  <div class="govuk-grid-row govuk-body">
    <div class="govuk-grid-column-three-quarters">
      <!-- TODO DTFS2-6751: make variable for expiry time --!>
      <p class="govuk-!-margin-bottom-6">For security, links expire after 30 minutes. You can request for a new sign in link to be sent to your email address.</p>
      {{ requestNewLoginLink({
        isPrimaryActionOnPage: true
      }) }}
    </div>
  </div>
{% endblock %}