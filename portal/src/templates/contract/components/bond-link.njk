{% macro render(params, bond) %}
  {% set dealId = params.deal._id %}
  {% if bond.uniqueIdentificationNumber %}
    {% if params.editable %}
      <a href="/contract/{{ dealId }}/bond/{{ bond._id}}/details" class="govuk-link" data-cy="unique-number-link-{{bond._id}}">{{ bond.uniqueIdentificationNumber }}</a>
    {% else %}
      <span data-cy="unique-number-{{bond._id}}">
        {{ bond.uniqueIdentificationNumber }}
      </span>
    {% endif %}
  {% else %}
    {% if params.editable %}
      <a href="/contract/{{ dealId }}/bond/{{ bond._id}}/details" class="govuk-link" data-cy="unique-number-link-{{bond._id}}">Not entered</a>
    {% else %}
    <span data-cy="unique-number-{{bond._id}}">
        Not entered
      </span>
    {% endif %}
  {% endif %}

{% endmacro %}
